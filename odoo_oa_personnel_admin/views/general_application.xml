<odoo>
    <data>
        <record id="oa_general_application_tree_view" model="ir.ui.view">
            <field name="name">通用审批单</field>
            <field name="model">oa.general.application</field>
            <field name="arch" type="xml">
                <tree default_order="form_number desc">
                    <field name="form_number"/>
                    <field name="name"/>
                    <field name="emp_id"/>
                    <field name="dept_id"/>
                    <field name="reason_leave"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="oa_general_application_form_view" model="ir.ui.view">
            <field name="name">通用审批单</field>
            <field name="model">oa.general.application</field>
            <field name="arch" type="xml">
                <form string="通用审批单">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="attachment_image_preview" type="object" class="oe_stat_button" icon="fa-image">
                                <field name="attachment_number" widget="statinfo"/>
                            </button>
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>
                        <div class="oe_title" name="title">
                            <label for="name" class="oe_edit_only"/>
                            <h2>
                                <field name="name" placeholder="申请标题..."/>
                            </h2>
                            <label for="form_number" class="oe_edit_only"/>
                            <h3>
                                <field name="form_number" placeholder="单据编号，自动生成" readonly="1"/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="emp_id" options="{'horizontal': true, 'no_create_edit': True}"/>
                            </group>
                            <group>
                                <field name="dept_id" options="{'horizontal': true, 'no_create_edit': True}"/>
                            </group>
                        </group>
                        <group>
                            <field name="reason_leave" placeholder="请详细描述需要申请的内容..."/>
                        </group>
                        <field name="remarks" placeholder="备注信息..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="oa_general_application_action">
            <field name="name">通用审批单</field>
            <field name="res_model">oa.general.application</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="通用审批单" id="oa_general_application_menu" parent="oa_administrative_personnel_main_menu" sequence="6" action="oa_general_application_action"/>

    </data>
</odoo>
